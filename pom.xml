            <scope>provided</scope>
        </dependency>
		
		<!-- Cloud Foundry Connector 설정 -->
		<dependency>
	        <groupId>org.springframework.cloud</groupId>
	        <artifactId>spring-cloud-spring-service-connector</artifactId>
	        <version>1.2.3.RELEASE</version>
	    </dependency>
